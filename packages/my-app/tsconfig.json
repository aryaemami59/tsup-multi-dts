{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "skipDefaultLibCheck": false
  },
  "include": [
    "src",
    "test",
    "./*.ts",
    "./*.js"
  ]
}
